# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'SocialMessenger' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  inhibit_all_warnings!

  # Pods for SocialMessenger

  pod 'SwiftyJSON'
  pod 'CocoaLumberjack/Swift'
  pod 'KeychainAccess'
  pod 'SwiftyUserDefaults'
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'Mockingjay'

  # ReactiveX
  pod 'RxSwift' 
  pod 'RxCocoa'  
  pod 'RxAlamofire'
  pod 'RxSwiftExt'
  pod 'RxGesture'
  pod 'RxDataSources'

  # UI
  pod 'NVActivityIndicatorView'
  pod 'SCLAlertView'
  pod 'SlackTextViewController'
  pod 'Toaster'
  
  pod 'IQKeyboardManagerSwift'

  pod 'Swinject'

  target 'SocialMessengerTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'RxBlocking'
    pod 'RxTest'

    pod 'Quick'
    pod 'Nimble'
  end

end
